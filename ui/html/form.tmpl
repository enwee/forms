{{define "form"}}
<form method="POST">
    <button name="action" value="view" {{if not .EditMode}}disabled{{end}}>Save / Preview</button>
    <button name="action" value="edit" {{if .EditMode}}disabled{{end}}>Edit</button>
    <br>
    {{if .EditMode}}
        {{template "form.edit" .}}
    {{else}}
        {{template "form.view" .}}
    {{end}}
</form>
{{end}}
